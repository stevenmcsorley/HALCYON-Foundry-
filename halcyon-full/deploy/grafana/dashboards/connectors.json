{
  "dashboard": {
    "title": "HALCYON Connectors",
    "tags": ["halcyon", "connectors"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Events Emitted (Total)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(connector_events_total[5m])) by (connector_id)",
            "legendFormat": "{{connector_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 2,
        "title": "Errors (Total)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(connector_errors_total[5m])) by (connector_id, error_type)",
            "legendFormat": "{{connector_id}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Poll Duration (HTTP Pollers)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(poll_duration_seconds_bucket[5m])) by (connector_id, le))",
            "legendFormat": "{{connector_id}} (p95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(poll_duration_seconds_bucket[5m])) by (connector_id, le))",
            "legendFormat": "{{connector_id}} (p50)",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 4,
        "title": "Kafka Lag",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "targets": [
          {
            "expr": "kafka_lag{connector_id=~\".+\"}",
            "legendFormat": "{{connector_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Messages" },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 5,
        "title": "Events by Connector",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "sum(increase(connector_events_total[1h])) by (connector_id)",
            "legendFormat": "{{connector_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 6,
        "title": "Error Rate by Connector",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "sum(rate(connector_errors_total[5m])) by (connector_id)",
            "legendFormat": "{{connector_id}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      }
    ]
  }
}
